{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./target",
    "resolveJsonModule": true,
    "declaration": true
  },
  "exclude": ["./tests", "./target"]
}
